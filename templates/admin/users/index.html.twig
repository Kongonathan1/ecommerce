{% extends 'base.html.twig' %}

{% block title %}Administration | Utilisateurs{% endblock %}

{% block body %}
<div class="row m-4">
    {% include "_partials/_nav_admin.html.twig" %}
    <main class="col-9">
        <h1 class="text-center mb-2">Administration des utilisateurs</h1>
        <table class="table table-striped mt-4">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Adresse</th>
                    <th>Ville</th>
                    <th>Code postal</th>
                    <th>Rôle(s)</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td> {{ user.lastname }} </td>
                        <td> {{ user.firstname }} </td>
                        <td> {{ user.address }} </td>
                        <td> {{ user.city }} </td>
                        <td> {{ user.zipcode }} </td>
                        <td>
                        {% for role in user.roles %}
                            {% if role in ['ROLE_ADMIN'] %}
                                <div class="btn btn-danger p-1 mt-1" style="cursor: default;">Administrateur</div>      
                            {% elseif role in ['ROLE_USER'] %}
                                <div class="btn btn-success p-1 mt-1" style="cursor: default;">utilisateur</div>   
                            {% endif %}
                        {% endfor %}
                    </td> 
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </main>
</div>
{% endblock %}